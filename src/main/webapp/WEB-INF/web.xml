<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>BikeRent</display-name>

    <!-- Mapowanie profile.jsp -->
    <servlet>
        <servlet-name>profile</servlet-name>
        <jsp-file>/profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <!-- Mapowanie login.jsp -->
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Mapowanie register.jsp -->
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Mapowanie index.jsp -->
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <!-- Mapowanie change-data.jsp -->
    <servlet>
        <servlet-name>change-data</servlet-name>
        <jsp-file>/change-data.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>change-data</servlet-name>
        <url-pattern>/change-data</url-pattern>
    </servlet-mapping>

    <!-- Mapowanie bikes.jsp -->
    <servlet>
        <servlet-name>bikes</servlet-name>
        <jsp-file>/bikes.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>bikes</servlet-name>
        <url-pattern>/bikes</url-pattern>
    </servlet-mapping>

    <!-- Mapowanie rentedbikes.jsp -->
    <servlet>
        <servlet-name>rentedbikes</servlet-name>
        <jsp-file>/rentedbikes.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>rentedbikes</servlet-name>
        <url-pattern>/rentedbikes</url-pattern>
    </servlet-mapping>

</web-app>